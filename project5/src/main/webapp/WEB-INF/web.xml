<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<resource-ref>
		<description> DB Connection Pooling</description>
		<res-ref-name>jdbc/movieDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<filter>
		<filter-name>loginfilter</filter-name>
		<filter-class>project5.jdbc.filter.LoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>CheckoutFilter</filter-name>
		<filter-class>project5.jdbc.filter.CheckoutFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ResultFilter</filter-name>
		<filter-class>project5.jdbc.filter.ResultFilter</filter-class>
	</filter>
	<filter>
		<filter-name>eloginfilter</filter-name>
		<filter-class>project5.jdbc.filter.ELoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>TSLogFilter</filter-name>
		<filter-class>project5.jdbc.filter.TSLogFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/shoppingcart</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/shoppingcart.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/orderInfo.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CheckoutFilter</filter-name>
		<url-pattern>/orderInfo.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/confirmation</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/confirmation.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/orderhistory</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/orderhistory.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/ordersingle.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/userInfo.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResultFilter</filter-name>
		<url-pattern>/orderfail.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResultFilter</filter-name>
		<url-pattern>/ordersuccess.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>eloginfilter</filter-name>
		<url-pattern>/dashapp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>TSLogFilter</filter-name>
		<url-pattern>/search</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>JDBCPoolServlet</servlet-name>
		<servlet-class>project5.servlet.JDBCPoolServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>LogConfigureServlet</servlet-name>
		<servlet-class>project5.servlet.LogConfig</servlet-class>
		<init-param>
			<param-name>project5-log-config-file</param-name>
			<param-value>logconfig.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>project5.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BrowserServlet</servlet-name>
		<servlet-class>project5.servlet.BrowserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SingleMovieServlet</servlet-name>
		<servlet-class>project5.servlet.SingleMovieServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SingleStarServlet</servlet-name>
		<servlet-class>project5.servlet.SingleStarServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>project5.servlet.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ShoppingCartServlet</servlet-name>
		<servlet-class>project5.servlet.ShoppingCartServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CheckoutServlet</servlet-name>
		<servlet-class>project5.servlet.CheckoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OrderHistoryServlet</servlet-name>
		<servlet-class>project5.servlet.OrderHistoryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EmployeeLoginServlet</servlet-name>
		<servlet-class>project5.servlet.EmployeeLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DashboardServlet</servlet-name>
		<servlet-class>project5.servlet.DashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InsertStarServlet</servlet-name>
		<servlet-class>project5.servlet.InsertStarServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InsertMovieServlet</servlet-name>
		<servlet-class>project5.servlet.InsertMovieServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchAjaxServlet</servlet-name>
		<servlet-class>project5.servlet.SearchAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SingleMovieAjaxServlet</servlet-name>
		<servlet-class>project5.servlet.SingleMovieAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginMobileServlet</servlet-name>
		<servlet-class>project5.servlet.LoginMobileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BrowserServlet</servlet-name>
		<url-pattern>/browse</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SingleMovieServlet</servlet-name>
		<url-pattern>/singlemovie</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SingleStarServlet</servlet-name>
		<url-pattern>/singlestar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShoppingCartServlet</servlet-name>
		<url-pattern>/shoppingcart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CheckoutServlet</servlet-name>
		<url-pattern>/checkout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrderHistoryServlet</servlet-name>
		<url-pattern>/orderhistory</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EmployeeLoginServlet</servlet-name>
		<url-pattern>/employee_login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DashboardServlet</servlet-name>
		<url-pattern>/_dashboard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InsertStarServlet</servlet-name>
		<url-pattern>/dashapp/insert_star</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InsertMovieServlet</servlet-name>
		<url-pattern>/dashapp/insert_movie</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchAjaxServlet</servlet-name>
		<url-pattern>/searchajax</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SingleMovieAjaxServlet</servlet-name>
		<url-pattern>/singlemovieajax</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginMobileServlet</servlet-name>
		<url-pattern>/loginmobile</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>HTTPSOnly</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>
